#include "rand.h"

uint32_t a=1103515245;
uint32_t c = 12345;
uint32_t m = 4;
static uint32_t seed = 123456789;

uint32_t random_row(){
//    seed = (a * seed + c) % m;
//    return seed;
	unsigned int a = 1103515245;
	unsigned int c = 12345;
	unsigned int m = 4; // 因为我们希望生成0到3之间的数，所以取模4

	// 更新种子
	seed = (a * seed + c) % m;

	// 返回生成的随机数
	return seed;
}
